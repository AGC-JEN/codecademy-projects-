const menu = {
  _meal: '',
  _price: 0,

  // Setter for meal
  set meal(mealToCheck) {
    if (typeof mealToCheck === 'string') {
      this._meal = mealToCheck;
    }
  },

  // Setter for price
  set price(priceToCheck) {
    if (typeof priceToCheck === 'number') {
      this._price = priceToCheck;
    }
  },

  // Getter for meal
  get meal() {
    return this._meal;
  },

  // Getter for price
  get price() {
    return this._price;
  },

  // Getter for today's special
  get todaysSpecial() {
    if (this._meal && this._price) {
      return `Today's Special is ${this._meal} for $${this._price}!`;
    } else {
      return `Today's Special is Spaghetti for $5!`;
    }
  }
};

// Use the setters to assign values
menu.meal = 'Pasta';
menu.price = 15;

console.log(menu.todaysSpecial); // Today's Special is Pasta for $15!
