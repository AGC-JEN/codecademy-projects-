<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Comment Forum</title>
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <style>
      body {
        font-family: 'Rubik', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }
      .forum {
        width: 600px;
        margin: 40px auto;
      }
      .card {
        background-color: #fff;
        border-radius: 12px;
        padding: 16px;
        margin: 16px 0;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      }
      .header {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
      }
      .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin-right: 12px;
      }
      .comment {
        font-size: 1rem;
        color: #555;
        margin: 0;
      }
      h1 {
        font-size: 1.2rem;
        margin: 0;
      }
    </style>
  </head>
  <body>
    <div id="root"></div>

    <!-- React and ReactDOM CDN -->
    <script src="https://unpkg.com/react@18/umd/react.development.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js" crossorigin></script>

    <script type="text/javascript">
      const { createRoot } = ReactDOM;

      // --- Data ---
      const comments = [
        {
          profileImg: 'https://images.unsplash.com/photo-1609992556706-14a7056ea745?ixlib=rb-4.0.3&auto=format&fit=crop&w=1287&q=80',
          username: 'ScrungeCat',
          comment: 'My favorite types of cats are slightly weird looking ones!'
        },
        {
          profileImg: 'https://images.unsplash.com/photo-1615751072497-5f5169febe17?ixlib=rb-4.0.3&auto=format&fit=crop&w=1335&q=80',
          username: 'ChewToy',
          comment: "I don't like cats at all."
        },
        {
          profileImg: 'https://images.unsplash.com/photo-1563482776068-4dac10f9373d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1170&q=80',
          username: 'BuryHeadInSand',
          comment: 'Wild ostriches make the best pets.'
        }
      ];

      // --- Components ---
      function Header({ profileImg, username }) {
        return React.createElement('div', { className: 'header' },
          React.createElement('img', { src: profileImg, alt: username, className: 'avatar' }),
          React.createElement('h1', null, username)
        );
      }

      function Body({ comment }) {
        return React.createElement('p', { className: 'comment' }, comment);
      }

      function Card({ commentObject }) {
        return React.createElement('div', { className: 'card' },
          React.createElement(Header, { profileImg: commentObject.profileImg, username: commentObject.username }),
          React.createElement(Body, { comment: commentObject.comment })
        );
      }

      function App() {
        return React.createElement('div', { className: 'forum' },
          comments.map((comment, index) => React.createElement(Card, { key: index, commentObject: comment }))
        );
      }

      // --- Render ---
      const container = document.getElementById('root');
      const root = createRoot(container);
      root.render(React.createElement(App));
    </script>
  </body>
</html>
