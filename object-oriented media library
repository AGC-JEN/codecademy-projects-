// Step 1–3: Create the parent class Media
class Media {
  constructor(title) {
    this._title = title;
    this._isCheckedOut = false;
    this._ratings = [];
  }

  // Step 4: Getters
  get title() {
    return this._title;
  }

  get isCheckedOut() {
    return this._isCheckedOut;
  }

  get ratings() {
    return this._ratings;
  }

  // Step 5: Setter
  set isCheckedOut(value) {
    this._isCheckedOut = value;
  }

  // Step 6: toggleCheckOutStatus
  toggleCheckOutStatus() {
    this._isCheckedOut = !this._isCheckedOut;
  }

  // Step 7: getAverageRating
  getAverageRating() {
    const ratings = this.ratings;
    if (ratings.length === 0) return 0;
    const sum = ratings.reduce((acc, rating) => acc + rating, 0);
    return sum / ratings.length;
  }

  // Step 8: addRating
  addRating(rating) {
    // Optional safety check (bonus idea from Step 25)
    if (rating >= 1 && rating <= 5) {
      this._ratings.push(rating);
    } else {
      console.log('Please provide a rating between 1 and 5.');
    }
  }
}

// Step 9–13: Create Book subclass
class Book extends Media {
  constructor(author, title, pages) {
    super(title);
    this._author = author;
    this._pages = pages;
  }

  get author() {
    return this._author;
  }

  get pages() {
    return this._pages;
  }
}

// Step 14: Create Movie subclass
class Movie extends Media {
  constructor(director, title, runTime) {
    super(title);
    this._director = director;
    this._runTime = runTime;
  }

  get director() {
    return this._director;
  }

  get runTime() {
    return this._runTime;
  }
}

// Step 15–19: Test Book
const historyOfEverything = new Book(
  'Bill Bryson',
  'A Short History of Nearly Everything',
  544
);

// Step 16: Toggle checkout
historyOfEverything.toggleCheckOutStatus();

// Step 17: Log isCheckedOut
console.log('Is Checked Out:', historyOfEverything.isCheckedOut);

// Step 18: Add ratings
historyOfEverything.addRating(4);
historyOfEverything.addRating(5);
historyOfEverything.addRating(5);

// Step 19: Log average rating
console.log('Average Rating:', historyOfEverything.getAverageRating());

// Step 20–24: Test Movie
const speed = new Movie('Jan de Bont', 'Speed', 116);

// Step 21: Toggle checkout
speed.toggleCheckOutStatus();

// Step 22: Log isCheckedOut
console.log('Is Checked Out:', speed.isCheckedOut);

// Step 23: Add ratings
speed.addRating(1);
speed.addRating(1);
speed.addRating(5);

// Step 24: Log average rating
console.log('Average Rating:', speed.getAverageRating());

// Step 25: Optional next steps (examples)
class CD extends Media {
  constructor(artist, title, songs) {
    super(title);
    this._artist = artist;
    this._songs = songs;
  }

  get artist() {
    return this._artist;
  }

  get songs() {
    return this._songs;
  }

  shuffle() {
    return this._songs
      .map((song) => ({ song, sort: Math.random() }))
      .sort((a, b) => a.sort - b.sort)
      .map(({ song }) => song);
  }
}
